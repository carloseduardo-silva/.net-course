@{
    ViewData["Title"] = "UploadaFiles";
}
<img src="~/images/upload2.png" width="200" height="150" />
<hr />
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        @if (ViewBag.erro != null)
        {
            <img src="~/images/erro1.png" width="150" height="150" />
            <h4>ViewBag.erro</h4>
        }
    </div>
    <div class="container">
        @if (@ViewData["Resultado"] != null)
        {
            <h4>@ViewData["Resultado"]</h4>
            <hr />
            @if (ViewBag.Arquivos != null)
            {
                @foreach (string arquivo in ViewBag.Arquivos)
                {
                    <li>
                        @arquivo
                    </li>
                }
            }
        }
    </div>
</div>
<div class="form-group">
    <a class="btn btn-outline-info" asp-controller="AdminImagens" asp-action="GetImages">Exibir Imagens</a>
</div>
